# Server Configuration
PORT=3001
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=512 --initial-old-space-size=256 --expose-gc --gc-interval=50

# Disable heavy services in development
DISABLE_APM_DETAILED=true
DISABLE_MONITORING=true
DISABLE_ALERTING=true
FORCE_GC=true
GC_INTERVAL=30000

# Reduce retention times
METRICS_RETENTION_HOURS=0.1
CACHE_SIZE_LIMIT=25
HEALTH_CHECK_INTERVAL=60000

# Database Configuration
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# JWT Configuration
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Discord Configuration
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=
DISCORD_BOT_TOKEN=
DISCORD_BOT_SERVICE_TOKEN=

# OKX API Configuration
OKX_API_KEY=
OKX_SECRET_KEY=
OKX_PASSPHRASE=
OKX_SANDBOX=

# Tatum API Configuration (Use TESTNET key for development, MAINNET for production)
TATUM_API_KEY=
TATUM_WEBHOOK_URL=
TATUM_WEBHOOK_SECRET=
BACKEND_URL=http://localhost:3001

# Platform Configuration
PLATFORM_COMMISSION_RATE=0.05

# Redis Configuration
REDIS_URL=

# CORS Configuration
FRONTEND_URL=http://localhost:3000
# Memory Optimization Settings
DISABLE_APM_DETAILED=true
CACHE_SIZE_LIMIT=100
METRICS_INTERVAL=300000
HEALTH_CHECK_INTERVAL=300000