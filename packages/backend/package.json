{
  "name": "@ecbot/backend",
  "version": "1.0.0",
  "description": "Express.js API backend for EcBot platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --max-old-space-size=512 --initial-old-space-size=256 -r tsx/cjs src/index.ts",
    "dev:old": "node dev-optimized.js",
    "dev:basic": "npx tsx watch src/index.ts",
    "dev:memory": "node --max-old-space-size=256 --expose-gc --optimize-for-size -r tsx/cjs src/index.ts",
    "dev:ultra": "node dev-ultra-light.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:512mb": "node start-512mb.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration.test.ts",
    "test:load": "jest --testPathPattern=loadTest.test.ts --runInBand",
    "test:discord-resilience": "jest --testPathPattern=discord-api-resilience --runInBand",
    "test:discord-resilience:integration": "jest --testPathPattern=discord-api-resilience.integration.test.ts --runInBand",
    "test:discord-resilience:load": "jest --testPathPattern=discord-api-resilience.load.test.ts --runInBand",
    "test:discord-resilience:config": "jest --testPathPattern=discord-api-resilience.config.test.ts --runInBand",
    "test:discord-resilience:failures": "jest --testPathPattern=discord-api-resilience.failures.test.ts --runInBand",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "clean": "rm -rf dist coverage",
    "dev:512mb": "node --max-old-space-size=512 --expose-gc --optimize-for-size -r tsx/cjs src/index.ts",
    "start:memory-optimized": "node start-memory-optimized.js",
    "okx-check": "npx tsx src/scripts/okx-diagnostics.ts check",
    "okx-fix": "npx tsx src/scripts/okx-diagnostics.ts fix",
    "okx-env": "npx tsx src/scripts/okx-diagnostics.ts env",
    "okx-redis": "npx tsx src/scripts/okx-diagnostics.ts redis",
    "network-test": "npx tsx src/scripts/network-test.ts",
    "health-check": "curl -f http://localhost:3001/api/health/health || echo 'Health check failed'",
    "test:currency": "npx tsx scripts/test-currency-exchange.ts"
  },
  "dependencies": {
    "@ecbot/shared": "file:../shared",
    "@supabase/supabase-js": "^2.39.3",
    "@tatumio/tatum": "^4.2.57",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^4.6.12",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
